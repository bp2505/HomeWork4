   <children>
      <VBox prefHeight="303.0" prefWidth="202.0">
         <children>
            <TextArea fx:id="txtArea" prefHeight="254.0" prefWidth="202.0" />
            <TextField fx:id="txtField" />
            <Button fx:id="btn" mnemonicParsing="false" onMouseClicked="#Submit" prefHeight="25.0" prefWidth="202.0" text="Submit" />
         </children>
      </VBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
